<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

    <TextView
        android:id="@+id/textViewBagLabelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bag Label:" />

    <TextView
        android:id="@+id/textViewBagLabel"
        android:layout_width="175dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@+id/textViewBagLabelLabel"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/textViewBagLabelLabel" />

    <TextView
        android:id="@+id/textViewPacksLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewBagLabelLabel"
        android:layout_marginTop="28dp"
        android:text="Packs in bag:"
        app:layout_constraintTop_toTopOf="@+id/textViewBagLabelLabel"
        tools:layout_editor_absoluteX="0dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:layout_below="@+id/textViewPacksLabel"
            android:layout_alignParentStart="true"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewPacksLabel"
            tools:layout_editor_absoluteX="2dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dip"
        android:layout_below="@id/viewPager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="147dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/actionGroup"
                android:checkedButton="@+id/radioVerify"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radioVerify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verify"
                    android:textSize="14sp" />
                <RadioButton
                    android:id="@+id/radioDispense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dispense"/>
                <RadioButton
                    android:id="@+id/radioUndispense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Undo Dispense"/>
            </RadioGroup>

            <Button
                android:id="@+id/btn_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/actionGroup"
                android:layout_margin="5dip"
                android:text="Scan" />

            <Button
                android:id="@+id/btn_clearBag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btn_scan"
                android:layout_below="@+id/actionGroup"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dip"
                android:text="Clear Bag" />

            <Button
                android:id="@+id/btn_sendBag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btn_clearBag"
                android:layout_below="@+id/actionGroup"
                android:layout_margin="5dip"
                android:text="FMD Request" />


            <EditText
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_scan"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:fadeScrollbars="true"
                android:focusableInTouchMode="false"
                android:inputType="none|textMultiLine" />

            <TextView
                android:id="@+id/textViewStatusTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText1"
                android:layout_centerHorizontal="true"
                android:text="Scanner Status:" />

            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewStatusTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dip"
                android:text="" />

        </RelativeLayout>


    </ScrollView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>